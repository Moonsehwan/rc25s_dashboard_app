#!/bin/bash
set -e

FRONTEND="/srv/repo/vibecoding/rc25s_dashboard_app/rc25s_frontend"
LOG="/srv/repo/vibecoding/logs/rc25s_realtime_upgrade.log"
APP_FILE="\$FRONTEND/src/App.tsx"
SERVICE="rc25s-dashboard.service"

echo "ğŸš€ [RC25S] WebSocket Realtime Dashboard Upgrade Started: \$(date)" | tee -a "\$LOG"

# ë°±ì—…
mkdir -p \$(dirname "\$LOG")
if [ -f "\$APP_FILE" ]; then
    cp "\$APP_FILE" "\${APP_FILE}.bak.\$(date +%Y%m%d%H%M%S)"
    echo "ğŸ§© Backed up existing App.tsx" | tee -a "\$LOG"
fi

# WebSocket ì—…ê·¸ë ˆì´ë“œ ë²„ì „ ì½”ë“œ ì‘ì„±
cat > "\$APP_FILE" <<'TSX'
import React, { useState, useEffect, useRef } from "react";

function App() {
  const [messages, setMessages] = useState<{ sender: string; text: string }[]>([]);
  const [input, setInput] = useState("");
  const [loading, setLoading] = useState(false);
  const wsRef = useRef<WebSocket | null>(null);

  // âœ… WebSocket ì—°ê²°
  useEffect(() => {
    const ws = new WebSocket("wss://api.mcpvibe.org/ws");
    wsRef.current = ws;

    ws.onopen = () => {
      setMessages((prev) => [...prev, { sender: "system", text: "ğŸ”Œ WebSocket ì—°ê²°ë¨" }]);
    };

    ws.onmessage = (event) => {
      try {
        const data = JSON.parse(event.data);
        if (data.type === "status") {
          setMessages((prev) => [
            ...prev,
            { sender: "system", text: \`ğŸ§  ìƒíƒœ: CPU \${data.cpu}% / RAM \${data.memory}%\` },
          ]);
        } else if (data.type === "llm_output") {
          setMessages((prev) => [...prev, { sender: "ai", text: data.output }]);
        }
      } catch {
        setMessages((prev) => [...prev, { sender: "ai", text: event.data }]);
      }
    };

    ws.onclose = () => {
      setMessages((prev) => [...prev, { sender: "system", text: "âš ï¸ WebSocket ì—°ê²° ëŠê¹€" }]);
    };

    return () => ws.close();
  }, []);

  const sendMessage = async () => {
    if (!input.trim()) return;
    setMessages((prev) => [...prev, { sender: "user", text: input }]);
    setLoading(true);

    try {
      const res = await fetch("https://api.mcpvibe.org/llm", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ prompt: input }),
      });

      const text = await res.text();
      const json = JSON.parse(text);
      setMessages((prev) => [...prev, { sender: "ai", text: json.output || "ì‘ë‹µì´ ì—†ìŠµë‹ˆë‹¤." }]);
    } catch (e) {
      console.error("Fetch error:", e);
      setMessages((prev) => [...prev, { sender: "system", text: "ğŸš« ì„œë²„ ì‘ë‹µ ì˜¤ë¥˜" }]);
    } finally {
      setLoading(false);
      setInput("");
    }
  };

  return (
    <div className="p-6 max-w-3xl mx-auto">
      <h1 className="text-2xl font-bold mb-4">ğŸ¤– RC25S AGI Realtime Dashboard</h1>
      <div className="border rounded-2xl p-4 bg-gray-50 min-h-[400px] overflow-y-auto mb-4">
        {messages.map((msg, i) => (
          <div key={i} className="mb-2">
            <b>{msg.sender}:</b> {msg.text}
          </div>
        ))}
        {loading && <div className="text-gray-400 italic">ğŸ¤” thinking...</div>}
      </div>
      <div className="flex space-x-2">
        <input
          type="text"
          className="flex-grow border rounded-full px-4 py-2 focus:outline-none"
          placeholder="ëª…ë ¹ì„ ì…ë ¥í•˜ì„¸ìš”..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
          onKeyDown={(e) => e.key === "Enter" && sendMessage()}
        />
        <button
          onClick={sendMessage}
          className="bg-green-500 text-white px-4 py-2 rounded-full hover:bg-green-600"
          disabled={loading}
        >
          {loading ? "..." : "Send"}
        </button>
      </div>
    </div>
  );
}

export default App;
TSX

# Build + Reload
cd "\$FRONTEND"
echo "âš™ï¸  Building updated React app..." | tee -a "\$LOG"
npm install --silent
npm run build --silent

echo "ğŸ” Restarting dashboard service..." | tee -a "\$LOG"
systemctl restart "\$SERVICE"

echo "ğŸŒ Testing backend health..." | tee -a "\$LOG"
curl -s https://api.mcpvibe.org/health | tee -a "\$LOG"

echo "âœ… [RC25S] Realtime Dashboard Upgrade Completed Successfully âœ…" | tee -a "\$LOG"
